<div class='page-header'><h2>Users</h2></div>
	<div class="container">
		<div class="row">
			<div class="col-md-1"><%= link_to 'Signup', '/signup'%></div>
		</div>
		<hr/>
		<% @users.each do |user| %>
			<div class="row">
				<div class="col-md-1"> <%= link_to user.name, user %> </div>
				<div class="col-md-1"> <%= link_to 'Edit', edit_user_path(user) %> </div>
				<div class="col-md-1"> <%= link_to 'Delete', user_path(user), method:'delete', data:{confirm:'You sure about this?'}%> </div>
			</div>
			<hr/>
		<% end %>
	</div>
</div>